
{{#unless pokie}}
<h2>Pokemon was not found...</h2>
{{else}}
<form class="left" action="/pokies/edit/{{pokie.name}}">
  <input class="#f5f5f5 grey lighten-4 waves-effect waves-light btn white-text" type="submit" value="Edit">
</form>

<form class="right" action="/pokies/{{pokie.name}}?_method=delete" method="post">
  <input class="#f5f5f5 grey lighten-4 waves-effect waves-light btn white-text" type="submit" value="Remove">
</form>

<div class="center">
<img class="card-panel responsive-img center-align" src="{{pokie.url}}">
</div>
<div class="container" style="font-family: 'Julius Sans One', sans-serif;">
  <div class="center col s6 white-text">
    <h3># {{pokie.index}}</h3>
  </div>
  <div class="center col s6 white-text">
    <h3>{{pokie.name}}</h3>
  </div>
  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="center col s6 white-text">
          <h4>{{pokie.type1}}</h4>
        </div>
        <div class="center col s6 white-text">
          <h4>{{pokie.type2}}</h4>
        </div>
      </div>
    </div>
  </div>
</div>

<form class="center" action="/pokies">
  <input class="#f5f5f5 grey lighten-4 waves-effect waves-light btn white-text" type="submit" value="Back">
</form>
{{/unless}}
